<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.3.xsd">

    <changeSet id="1" author="voronov">
        <comment>install pgcrypto and uuid-ossp modules</comment>  
        <sql dbms="postgresql">
            CREATE EXTENSION IF NOT EXISTS "pgcrypto";
            CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
        </sql>
    </changeSet>
    <changeSet id="2" author="voronov">
        <createTable tableName="users">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="uuid" type="uuid">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="login" type="varchar(256)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_hash" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>
        <createTable tableName="access_tokens">
            <column name="token" type="varchar(32)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="user_uuid" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>
        <createTable tableName="assets">
            <column name="name" type="varchar(256)">
                <constraints nullable="false" />
            </column>
            <column name="user_uuid" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="bytea">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey columnNames="name, user_uuid" constraintName="pk_assets" tableName="assets"/>
        <sql dbms="postgresql">
            CREATE INDEX assets_b_tree_index_by_user_uuid ON assets (user_uuid);
            CREATE INDEX access_tokens_b_tree_index_by_user_uuid ON access_tokens (user_uuid);
        </sql>
        <rollback>
            <dropTable tableName="assets"/>
            <dropTable tableName="access_tokens"/>
            <dropTable tableName="users"/>
        </rollback>
    </changeSet>
</databaseChangeLog>